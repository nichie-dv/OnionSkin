{
	"geode": "5.0.0",
	"version": "v1.2.5",
	"gd": {
		"win": "2.2081",
		"android": "2.2081",
		"mac": "2.2081",
		"ios": "2.2081"
	},
	"id": "nichie.onion_skin",
	"name": "Onion Skin",
	"description": "Turns editor layers into an onion skin tool",

	"developer": "nichie",
	"links": {
		"homepage": "https://nichie.dev",
		"source": "https://github.com/nichie-dv/OnionSkin"
	},
	

	"dependencies": {
		"geode.node-ids": ">=1.21.1"
	},
	"tags": [
		"editor",
		"offline"
	],
	"resources": {
        "sprites": [
            "resources/onionBtn_on.png",
			"resources/onionBtn_off.png"
        ]
    },

	"settings": {
        "main-title": {
            "type": "title",
            "name": "Main Settings"
        },
        "past-color": {
            "name": "Past Frames",
            "type": "rgb",
            "default": "#f00",
			"description": "Change what color past frames show up as."
        },
		"future-color": {
            "name": "Future Frames",
            "type": "rgb",
            "default": "#00f",
			"description": "Change what color future frames show up as."
        },
		"rendering-title": {
            "type": "title",
            "name": "Rendering Settings"
        },
		"show-past": {
			"type": "bool",
			"name": "Show Past Frames",
			"default": true
		},
		"show-future": {
			"type": "bool",
			"name": "Show Future Frames",
			"default": true
		},
		"frame-depth": {
            "name": "Frame Cutoff",
			"description": "Change how many past and future frames will be displayed.",
            "type": "int",
            "default": 5,
            "min": 1,
            "max": 50,
            "control": {
                "slider": true
            }
        },
		"max-opacity": {
            "name": "Maximum Frame Opacity",
            "type": "int",
            "default": 35,
            "min": 0,
            "max": 100,
            "control": {
                "slider": true
            }
        },
		"min-opacity": {
            "name": "Minimum Frame Opacity",
            "type": "int",
            "default": 0,
            "min": 0,
            "max": 100,
            "control": {
                "slider": true
            }
        },
        "keybinds-title": {
            "type": "title",
            "name": "Keybind Settings"
        },
        "onionskin-toggle-keybind": {
            "name": "Toggle Onion Skin",
            "type": "keybind",
            "default": "F10"
        },
        "modiefier-keybinds-title": {
            "type": "title",
            "name": "Base Keybind Settings (Shift + Bind)"
        },
        "renderpast-keybind": { 
            "name": "Render Past Frames",
            "type": "keybind",
            "default": "F9"
        },
        "renderfuture-keybind": { 
            "name": "Render Future Frames",
            "type": "keybind",
            "default": "F10"
        }
        
    }   
}
